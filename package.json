{
	"name": "w3-ceres",
	"displayName": "w3-ceres",
	"description": "Simplified Ceres implementation, project initialization, and custom workflows for Warcraft 3 Lua/TS maps.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ceres.init",
		"onCommand:ceres.build",
		"onCommand:ceres.run",
		"onCommand:ceres.edit"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ceres.init",
				"title": "Ceres Init Project"
			},
			{
				"command": "ceres.build",
				"title": "Ceres Build"
			},
			{
				"command": "ceres.run",
				"title": "Ceres Run"
			},
			{
				"command": "ceres.edit",
				"title": "Ceres Edit"
			}
		],
		"configuration": [
			{
				"title": "Warcraft 3",
				"properties": {
					"warcraft3.path.game": {
						"type": "string",
						"default": "C:\\Program Files\\Warcraft III\\x86_64\\Warcraft III.exe",
						"markdownDescription": "Specify **Warcraft III.exe** path"
					},
					"warcraft3.path.editor": {
						"type": "string",
						"default": "C:\\Program Files\\Warcraft III\\x86_64\\World Editor.exe",
						"markdownDescription": "Specify **World Editor.exe** path"
					}
				}
			},
			{
				"title": "Ceres",
				"properties": {
					"ceres.compileObjects": {
						"title": "Compile Objects:",
						"type": "boolean",
						"default": "false",
						"markdownDescription": "Do you want to compile your obj data before opening world editor? \n\n\nYour object file should be in ./src/obj/lua/index.lua"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"lua-types": "^2.7.0",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"ceres-decl": "^1.0.2",
		"tstl": "^2.4.1"
	}
}
